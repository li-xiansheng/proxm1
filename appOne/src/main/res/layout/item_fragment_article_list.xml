<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:id="@+id/fragment_article_list_item_image_box1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:id="@+id/fragment_article_list_item_image0"
            android:background="#EEEEEE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_fragment_article_list_title"
                android:padding="10dp"
                android:textSize="16dp"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            android:id="@+id/fragment_article_list_item_image_box2"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:id="@+id/fragment_article_list_item_image1"
                android:background="#eeeeee"
                android:scaleType="fitXY"
                android:layout_margin="2dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/fragment_article_list_item_image2"
                android:background="#eeeeee"
                android:layout_margin="2dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/fragment_article_list_item_image3"
                android:background="#eeeeee"
                android:layout_margin="2dp"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="12dp"
                android:textColor="#888888"
                android:id="@+id/item_fragment_article_list_addtime"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="12dp"
                android:textColor="#888888"
                android:id="@+id/item_fragment_article_list_source"/>
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:id="@+id/item_fragment_article_list_article_id"/>
    </LinearLayout>

</LinearLayout>