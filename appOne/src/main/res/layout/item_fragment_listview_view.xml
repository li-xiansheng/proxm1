<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_activity_message_listview_image"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:background="#f7f7f7"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_activity_message_listview_title"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_activity_message_listview_description"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#AAAAAA"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/item_activity_message_listview_time"
                android:textColor="#AAAAAA"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="160dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>