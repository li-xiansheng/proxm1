<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_nav_height"
    android:background="#000000"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingTop="0dp">

    <LinearLayout
        android:id="@+id/common_bottom_ll_news"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/common_bottom_nav_news"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/news" />

        <TextView
            android:id="@+id/common_bottom_tv_news"
            style="@style/text_style"
            android:layout_marginTop="1dp"
            android:text="首页" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_bottom_ll_page"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/common_bottom_nav_page"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/page" />

        <TextView
            android:id="@+id/common_bottom_tv_page"
            style="@style/text_style"
            android:layout_marginTop="1dp"
            android:text="视频" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_bottom_ll_peoplelife"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/common_bottom_nav_peoplelife"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/peopleslife" />

        <TextView
            android:id="@+id/common_bottom_tv_peoplelife"
            style="@style/text_style"
            android:layout_marginTop="1dp"
            android:text="罗盘" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_bottom_ll_my"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/common_bottom_nav_my"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/my" />

        <TextView
            android:id="@+id/common_bottom_tv_my"
            style="@style/text_style"
            android:layout_marginTop="1dp"
            android:text="我的" />
    </LinearLayout>

</LinearLayout>