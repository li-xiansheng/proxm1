<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    tools:context="com.cpcp.loto.activity.LiuHeImgActivity"
    android:orientation="vertical">

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/salary_tablayout"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        tl:tl_bar_color="@color/colorPrimary"
        tl:tl_indicator_color="@color/white"
        tl:tl_textUnselectColor="@color/white"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_indicator_corner_radius="5dp"
        tl:tl_tab_padding="20dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/salary_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    </android.support.v4.view.ViewPager>
</LinearLayout>
