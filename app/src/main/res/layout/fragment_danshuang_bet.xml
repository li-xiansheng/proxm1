<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grayText" />

    <TextView
        android:id="@+id/qishu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="@color/grayText"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grayText" />

    <TextView
        android:id="@+id/remen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:text="本期热门:"
        android:textColor="@color/grayText"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grayText" />

    <LinearLayout
        android:id="@+id/ll_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rb_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <com.liulishuo.magicprogresswidget.MagicProgressBar
                android:id="@+id/progress_red"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                app:mpb_background_color="@color/grayTab"
                app:mpb_fill_color="@color/colorDeepOrangePrimaryDark"
                app:mpb_flat="false" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/aa_toupiao_red"
                android:gravity="center"
                android:text="单"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grayText" />

    <LinearLayout
        android:id="@+id/ll_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rb_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <com.liulishuo.magicprogresswidget.MagicProgressBar
                android:id="@+id/progress_green"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                app:mpb_background_color="@color/grayTab"
                app:mpb_fill_color="@color/greenColor"
                app:mpb_flat="false" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/aa_toupiao_green"
                android:gravity="center"
                android:text="双"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grayText" />

    <RelativeLayout
        android:id="@+id/toupiao"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/aa_btn_back_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="投票"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>