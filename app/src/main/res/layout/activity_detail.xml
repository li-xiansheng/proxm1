                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

                <android.support.v7.widget.AppCompatTextView
