<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp20"
        android:text="简介\n转转转!转出本期的生肖和波色,激动不如行动，感觉来转出你您心目中的生肖和波色!" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvQiShu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="xxxx年第xxx期" />

    <RelativeLayout
        android:layout_width="@dimen/dp310"
        android:layout_height="@dimen/dp310"
        android:layout_margin="@dimen/dp8"
        android:background="@color/black">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"></android.support.v7.widget.RecyclerView>

        <com.cpcp.loto.view.CirclePointView
            android:id="@+id/circlePointView"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp150"
            android:layout_centerInParent="true" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_arc2_yellow"
            android:gravity="center"
            android:paddingBottom="@dimen/dp2"
            android:paddingLeft="@dimen/dp6"
            android:paddingRight="@dimen/dp6"
            android:paddingTop="@dimen/dp2"
            android:text="开始" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="@dimen/dp8"
        android:text="小提示：每期只能进行一次波肖转盘"
        android:textColor="@color/red" />
</LinearLayout>