<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBgLight">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp40">


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etTel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/sp16" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etNickName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp8"
            android:hint="昵称"
            android:maxLength="20"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/sp16" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp8"
            android:hint="8-20位密码，建议字母，数字和非空符号组合"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="@dimen/dp8"
                android:hint="验证码"
                android:inputType="phone"
                android:maxLength="6"
                android:paddingLeft="@dimen/dp40"
                android:paddingRight="@dimen/dp10"
                android:textSize="@dimen/sp16" />

            <com.cpcp.loto.view.SelectedLayerTextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:text="获取验证码"
                android:background="@drawable/shape_border_rect_red"
                android:textColor="@color/red"
                android:textSize="@dimen/sp14" />
        </LinearLayout>


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etInviteNum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp8"
            android:hint="邀请码(可为空)"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/sp16" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etQQNum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp8"
            android:hint="QQ号"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="@dimen/dp40"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/sp16" />

        <com.cpcp.loto.view.SelectedLayerTextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/shape_border_rect_gray"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/red"
            android:textSize="@dimen/sp18" />
    </LinearLayout>
</ScrollView>