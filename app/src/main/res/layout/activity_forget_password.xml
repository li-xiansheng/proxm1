<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etTel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_phone_gray"
        android:drawablePadding="@dimen/dp8"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:textSize="@dimen/sp16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etCode"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_code"
            android:drawablePadding="@dimen/dp8"
            android:hint="验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/sp16" />

        <com.cpcp.loto.view.SelectedLayerTextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_border_rect_red"
            android:paddingBottom="@dimen/dp8"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp8"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="@dimen/sp14" />
    </LinearLayout>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_pass_gray"
        android:drawablePadding="@dimen/dp8"
        android:hint="新密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:textSize="@dimen/sp16" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etPwdConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_pass_gray"
        android:drawablePadding="@dimen/dp8"
        android:hint="再次确认"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:textSize="@dimen/sp16" />

    <RelativeLayout
        android:id="@+id/relSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/aa_btn_back_selector">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>