<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/transparent"
        android:hint="标题"
        android:paddingLeft="@dimen/dp10" />

    <include layout="@layout/view_gray_line" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etScore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/transparent"
        android:hint="查看心水需要支付的积分（0-50）"
        android:paddingLeft="@dimen/dp10"
        android:inputType="number"/>

    <include layout="@layout/view_gray_line" />

    <com.cpcp.loto.view.NestRadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbCode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center"
                android:text="正码一" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbCode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="正码二" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbCode3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:text="正码三" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbCode4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="正码四" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbCode5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="正码五" />

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/rbCode6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="正码六" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rbTema"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:text="tema" />
    </com.cpcp.loto.view.NestRadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rbSingle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="单" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rbDouble"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:text="双" />


    </RadioGroup>
</LinearLayout>