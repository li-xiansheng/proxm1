<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <com.muzikun.lhfsyczl.view.PullToRefreshRecyclerView xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pullToRefreshRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrDrawable="@drawable/arrow_down"
            ptr:ptrHeaderBackground="@color/white"
            ptr:ptrHeaderTextColor="@color/grayText"
            ptr:ptrMode="both"
            ptr:ptrOverScroll="false"
            ptr:ptrShowIndicator="false" />

        <com.muzikun.lhfsyczl.view.SelectedLayerImageView
            android:id="@+id/ivSendMsg"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp20"
            android:src="@drawable/icon_send_msg" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lilInput"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:background="@color/grayBgLight"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <com.muzikun.lhfsyczl.view.SelectedLayerTextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="取消"
                android:textColor="@color/blackText" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="回复帖子"
                android:textColor="@color/blackText"
                android:textSize="@dimen/sp16" />

            <com.muzikun.lhfsyczl.view.SelectedLayerTextView
                android:id="@+id/tvReplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:textColor="@color/blackText" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/shape_arc4_white"
            android:gravity="top"
            android:hint="回复楼主"
            android:minHeight="@dimen/dp30"
            android:paddingLeft="@dimen/dp8" />


    </LinearLayout>
</LinearLayout>